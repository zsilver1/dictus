{% extends "base.jinja2" %}
{% block pos %}
  <option value="all">All</option>
  {% for p in lang.pos_set %}
    <option value="{{ p }}">{{ p }}</option>
  {% endfor %}
{% endblock pos %}

{% block content %}
  {% for word in lang.words %}
    <hr class="word line">
    <div class="entry main" id={{ word.name }}>
      <h1 class="word name">{{ word.name }}</h1>
      <div class="word props">
          {% for prop in word.props %}
            <div class="prop">
              {{ prop }}
            </div>
          {% endfor %}
        </div>
      <div class="word text">
        {{word.text}}
      </div>


      {# LOOP THROUGH DEFINITIONS #}
      {% for def in word.defs %}
        <hr class="def line">
        <div class="term">
          {{ def.props.pop("pos", "") }}
        </div>
        <div class="def props">
          {% for prop in def.props %}
            <div class="prop">
              {{ prop }}
            </div>
          {% endfor %}
        </div>
        <div class="def text">
          {{ def.text }}
        </div>
      {% endfor %}
    </div>
  {% endfor %}
{% endblock content %}
